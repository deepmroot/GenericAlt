{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --omit=dev && npm run build"
  },
  "deploy": {
    "startCommand": "npm run preview -- --host --port $PORT",
    "healthcheckPath": "/invest",
    "healthcheckTimeout": 100,
    "restartPolicy": "ON_FAILURE"
  }
}
